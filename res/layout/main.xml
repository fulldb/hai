<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	    android:id="@+id/title"
	    android:layout_height="match_parent"
	    android:layout_width="match_parent"
	    >
	
    <LinearLayout 
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" 
    >
	<RelativeLayout 
	    android:id="@+id/title"
	    android:layout_height="30dp"
	    android:layout_width="match_parent"
	    android:background="@drawable/bg_header"
	    >
	    <TextView
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="@string/file_manager" 
	        android:layout_centerHorizontal="true"
	        android:layout_centerVertical="true"
	        />
	</RelativeLayout>
	<LinearLayout 
	    android:id="@+id/toolbar_layout"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:background="@drawable/webpage_title_bg"
	    android:orientation="horizontal"
	    android:gravity="center_vertical"
	    >
	    <ImageButton 
	        android:id="@+id/copy"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:src="@drawable/toolbar_copy"
	        android:layout_weight="1"
	        android:layout_gravity="center"
	        android:layout_marginTop="2dp"
	        />
	    <ImageButton 
	        android:id="@+id/paste"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:src="@drawable/toolbar_paste_cancel"
	        android:layout_weight="1"
	        android:layout_marginTop="2dp"
	        />
	    <ImageButton 
	        android:id="@+id/multi_choose"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:src="@drawable/toolbar_select"
	        android:layout_weight="1"
	        android:layout_marginTop="2dp"
	        />
	    <ImageButton 
	        android:id="@+id/show_type"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:src="@drawable/toolbar_mode_icon"
	        android:layout_weight="1"
	        android:layout_marginTop="2dp"
	        />
	</LinearLayout>
	<RelativeLayout 
	    android:id="@+id/path_layout"
	    android:layout_height="30dp"
	    android:layout_width="match_parent"
	    android:background="@drawable/list_pressed_holo"
	    >
	    <TextView
	        android:id="@+id/dir_info"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textSize="18sp"
	        android:text="SDCard" 
	        android:layout_centerVertical="true"
	        android:layout_marginLeft="5dp"
	        android:singleLine="true"
	        android:ellipsize="marquee"
	        android:focusable="true" 
	        android:focusableInTouchMode="true"
	        android:marqueeRepeatLimit="marquee_forever" 
	        />
	</RelativeLayout>
    <ListView
        android:layout_below="@id/path_layout"
        android:id="@+id/listview"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:fastScrollEnabled="true"
        android:cacheColorHint="#00000000" 
        android:background="@drawable/theme_2"
        />
    
    <GridView
	        android:id="@+id/gridview"
	        android:layout_width="fill_parent"
	        android:layout_height="fill_parent"
	        android:columnWidth="60dip"
	        android:horizontalSpacing="5dp"
	        android:verticalSpacing="5dp"
	        android:numColumns="4"
	        
	        android:fastScrollEnabled="true"
	        android:visibility="gone"
	        android:background="@drawable/theme_2"
	        />
    <!-- android:stretchMode="columnWidth" -->
    
</LinearLayout>

    
    	<TextView 
	        android:id="@+id/empty_file"
	        android:visibility="gone"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="没有文件"
			android:layout_centerInParent="true"
	        />
</RelativeLayout>
